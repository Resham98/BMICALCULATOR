<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0ffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.reshamverliani.bmicalculator.aboutActivity">


    <TextView
        android:id="@+id/tvabt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#303f9f"
        android:text="Calculate Body Mass Index" />

    <TextView
        android:id="@+id/tvabt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:textColor="#303f9f"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:text="Inspired by your mind"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_below="@+id/tvabt2" />

    <TextView
        android:id="@+id/tvabt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Application developed by Resham Verliani"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#303f9f"
        android:gravity="center"
        android:layout_below="@+id/tvabt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
