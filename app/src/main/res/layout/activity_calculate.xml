<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E0FFFF"
    tools:context="com.example.reshamverliani.bmicalculator.CalculateActivity">

    <TextView
        android:id="@+id/tvFeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Feet"
        android:textColor="#303f9f"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/sp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnCalculate"
        android:layout_alignRight="@+id/btnCalculate"
        android:layout_below="@+id/tvInch"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp2"
        android:layout_alignStart="@+id/sp2"
        android:layout_below="@+id/tvFeet"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvData"
        android:textColor="#303f9f"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Height"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvFeet"
        android:layout_alignStart="@+id/tvFeet"
        android:layout_below="@+id/sp1"
        android:layout_marginTop="7dp"
        android:textColor="#303f9f"
        android:text="Inch"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvHeight"
        android:layout_alignStart="@+id/tvHeight"
        android:layout_below="@+id/sp2"
        android:layout_marginTop="10dp"
        android:textColor="#303f9f"
        android:text="Weight"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvData"
        android:layout_alignParentTop="true"
        android:textColor="#303f9f"
        android:layout_alignStart="@+id/tvData"
        android:text="" />

    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCalculate"
        android:layout_centerHorizontal="true"
        android:background="@drawable/theme"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="13dp"
        android:text="View History" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:background="@drawable/theme"
        android:text="Calculate" />

    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvData"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvData"
        android:layout_marginEnd="7dp"
        android:textColor="#303f9f"
        android:layout_marginRight="7dp"
        android:text="" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text=""
        android:fontFamily=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#303f9f"
        android:layout_below="@+id/tvLocation"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter weight"
        android:padding="8dp"
        android:background="@drawable/edittextstyle"
        android:inputType="number"
        android:layout_below="@+id/tvWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />


</RelativeLayout>
